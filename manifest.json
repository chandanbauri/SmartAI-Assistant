{
    "manifest_version": 3,
    "name": "Smart AI Assistant",
    "version": "1.0.0",
    "description": "AI-powered email assistant using Chrome Built-in AI APIs.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://mail.google.co.uk/*",
        "https://mail.google.co.in/*",
        "https://*.outlook.com/*",
        "https://*.office.com/*",
        "https://*.office365.com/*",
        "https://leetcode.com/*",
        "https://*.leetcode.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open AI Assistant"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*",
                "https://mail.google.co.uk/*",
                "https://mail.google.co.in/*",
                "https://*.outlook.com/*",
                "https://*.office.com/*",
                "https://*.office365.com/*",
                "https://leetcode.com/*",
                "https://*.leetcode.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}